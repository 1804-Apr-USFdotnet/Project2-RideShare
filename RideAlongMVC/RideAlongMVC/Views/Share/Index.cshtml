
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<RideAlongMVC.Models.Share>


<h2>Index</h2>
<scripts>
    function MoveToAngular{
    window.location.replace("");
    }
</scripts>
<body>
    <div>

    </div>


    @if (Model.Count() != 0)
    {
        bool floater = true;
        foreach (var share in Model)
        {
            if (floater)
            {
                <table class="table table-striped" float="left" style="width:49%">
                    <thead>
                        <tr>
                            <td>Departure</td>
                            <td>Destination</td>
                        </tr>
                    </thead>
                    <tr>
                        <td>@share.DepartureCity</td>
                        <td>@share.DestinationCity</td>
                    </tr>
                    <tr>
                        <td>@share.Seats</td>
                        <td>@share.DepartureDate</td>
                    </tr>
                    <tr>
                        <td colspan="2" align="center">
                            <button onclick="MoveToAngular">Check Out this Ride</button>
                        </td>
                        @*<td colspan="2">@Html.ActionLink("Check out this ride", "Move to Angular")</td>*@
                    </tr>
                </table>
            }
            else
            {
                <table class="table table-striped" float="right">
                    <thead>
                        <tr>
                            <td>Departure</td>
                            <td>Destination</td>
                        </tr>
                    </thead>
                    <tr>
                        <td>@share.DepartureCity</td>
                        <td>@share.DestinationCity</td>
                    </tr>
                    <tr>
                        <td>@share.Seats</td>
                        <td>@share.DepartureDate</td>
                    </tr>
                    <tr>
                        <td colspan="2" align="center">
                            <button onclick="MoveToAngular">Check Out this Ride</button>
                        </td>
                        @*<td colspan="2">@Html.ActionLink("Check out this ride", "Move to Angular")</td>*@
                    </tr>
                </table>
            }
        }
    }
</body>

